{
    "name": "angular2-switcher",
    "displayName": "angular2-switcher",
    "description": "Switch .ts/.html in angular2 project.",
    "version": "0.0.5",
    "publisher": "infinity1207",
    "engines": {
        "vscode": "^1.5.0"
    },
    "categories": [
        "Languages",
        "Other"
    ],
    "activationEvents": [
        "onCommand:extension.switchTemplate",
        "onCommand:extension.switchStyle",
        "onCommand:extension.switchTS"
    ],
    "main": "./out/src/extension",
    "contributes": {
        "commands": [
            {
                "command": "extension.switchTemplate",
                "title": "Open Corresponding template(html) File"
            },
            {
                "command": "extension.switchStyle",
                "title": "Open Corresponding style(scss/sass/css) File"
            },
            {
                "command": "extension.switchTS",
                "title": "Open Corresponding typescript(ts) File"
            }
        ],
        "keybindings": [
            {
                "command": "extension.switchTemplate",
                "key": "alt+o",
                "when": "editorTextFocus"
            },
            {
                "command": "extension.switchStyle",
                "key": "alt+i",
                "when": "editorTextFocus"
            },
            {
                "command": "extension.switchTS",
                "key": "alt+u",
                "when": "editorTextFocus"
            }
        ]
    },
    "scripts": {
        "vscode:prepublish": "tsc -p ./",
        "compile": "tsc -watch -p ./",
        "postinstall": "node ./node_modules/vscode/bin/install"
    },
    "devDependencies": {
        "typescript": "^2.0.3",
        "vscode": "^1.0.0",
        "mocha": "^2.3.3",
        "@types/node": "^6.0.40",
        "@types/mocha": "^2.2.32"
    }
}